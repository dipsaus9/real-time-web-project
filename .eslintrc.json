{
	"parserOptions": {
		"sourceType": "module"
	},
    "env": {
        "browser": true,
				"es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
          2, 2, {"SwitchCase": 1}
        ],
        "linebreak-style": 0,
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "semi": [
            "error",
            "always"
        ],
		"no-console": 0,
		"strict": [
			"error",
			"global"
		],
		"sourceType": "module"
    }
}
